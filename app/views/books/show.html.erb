<% if flash[:notice] %>
  <p id="notice">
  <%= flash[:notice] %>
  </p>
<% end %>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
    <%#= render 'users/list', user: @user ,users: @users , book: @book %>
      <div class="col-md-3">
        <h2>User Info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user), class:'btn btn-outline-secondary btn-block' do%>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <h2>New book</h2>
        <%= form_with model:@book_new, local:true do |f| %>

        <p>title</p>
        <%= f.text_field :title %>

        <p>Option</p>
        <%= f.text_area :body %>
        <div>
          <%= f.submit 'Create Book' , class:'btn btn-success'%>
        </div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <div class="col-md-8 offset-md-1">
          <h2>Book</h2>
          <table class="table table-hover table-inverse">
            <thead>
            <tr>
              <th>
                Book detail
              </th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td> <%= link_to user_path(@user.id) do %><%= image_tag @user.get_profile_image(100,100) %>
              <%= @user.name %><% end %></td>

              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
               <td class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book) %></td>
               <td class="btn btn-sm btn-danger"><%= link_to "Destroy",book_path(@book),method: :delete %></td>
            </tr>
            </tbody>
          </table>
        </div>
       </div>
    </div>
  </div>

</main>