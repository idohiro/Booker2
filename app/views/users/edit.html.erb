
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User Info</h2>
      <% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
    <ul>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
       <div class="form-group">
        <label for="inputName">Image</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像" %>
    </div>
      <div class="form-group">
        <label for="inputName">Introduction</label>
      <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:""%>
      </div>
      <div class="form-group">
      <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
<% end %>